<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <remote name="butter" fetch="https://github.com/IAmButter"/>
    <remote name="parrot-developers" fetch="https://github.com/Parrot-Developers"/>

    <default remote="butter" revision="master" sync-j="4"/>

    <!-- build system -->
    <project name="alchemy.git" remote="parrot-developers" path="alchemy" />

    <!-- project configuration -->
    <project name="config.git" remote="butter" path="config">
    	<copyfile src="scripts/root.sh" dest="build.sh" />
    </project>

    <!-- project packages -->
    <project name="physics.git" remote="butter" path="packages/physics" />
    <project name="controls.git" remote="butter" path="packages/controls" />
    <project name="systems.git" remote="butter" path="packages/systems" />
    <project name="interface.git" remote="butter" path="packages/interface" />
    <project name="playground.git" remote="butter" path="packages/playground" />
    <project name="entities.git" remote="butter" path="packages/entities" />
    <project name="options.git" remote="butter" path="packages/options" />
    <project name="audio.git" remote="butter" path="packages/audio" />
    <project name="graphics.git" remote="butter" path="packages/graphics" />

</manifest>
